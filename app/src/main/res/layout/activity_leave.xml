<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/picture3"
    tools:context="com.example.admin.ict_interns.LeaveActivity">

    <EditText
        android:background="@drawable/leave"
        android:layout_width="match_parent"
        android:hint="Name of Employee"
        android:paddingLeft="30dp"
        android:layout_height="30dp"
        android:id="@+id/employee_name" />

    <EditText
        android:background="@drawable/leave"
        android:layout_width="match_parent"
        android:hint="Designation"
        android:paddingLeft="30dp"
        android:layout_height="30dp"
        android:id="@+id/designation"
        android:layout_marginTop="15dp"/>

    <EditText
        android:background="@drawable/leave"
        android:layout_width="match_parent"
        android:hint="Name of School"
        android:paddingLeft="30dp"
        android:layout_height="30dp"
        android:id="@+id/name_of_school"
        android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave required from: "
            android:textSize="20sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:background="@drawable/leave"
            android:layout_width="100dp"
            android:hint="Start Date"
            android:layout_height="30dp"
            android:id="@+id/start_date"
            android:paddingLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:background="@drawable/leave"
            android:layout_width="100dp"
            android:hint="End Date"
            android:layout_height="30dp"
            android:id="@+id/end_date"
            android:paddingLeft="8dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:paddingLeft="30dp"
        android:background="@drawable/leave"
        android:hint="Purpose of Leave"
        android:id="@+id/purpose_of_leave"
        android:layout_weight="0.3"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:paddingLeft="30dp"
        android:background="@drawable/leave"
        android:hint="Address of Leave"
        android:id="@+id/address"
        android:layout_weight="0.3"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:background="#bd4682"
        android:id="@+id/submit_leave"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/return_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background" />


</LinearLayout>
</ScrollView>